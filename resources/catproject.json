{
    "dependencies": [
        {
            "name": "dependency.loader",
            "type": "loader",
            "path": ["./plugins/"]
        }
    ],

    "plugins": [
        {
            "name": "custom.plugin",
            "type": "custom-plugin",
            "dependency": "dependency.loader"
        },
        {
            "name": "libraries.install",
            "type": "libraries",
            "dependency": "manager",
            "action": "install"
        },
        {
            "name": "libraries.clean",
            "type": "libraries",
            "dependency": "manager",
            "imports": ["cat"],
            "action": "clean"
        },
        {
            "name": "target.inject",
            "type": "inject"
        },
        {
            "name": "project.clean",
            "type": "clean",
            "src": ["target", "_cat_md.json"]
        },
        {
            "name": "project.wipe",
            "type": "clean",
            "src": ["src", "lib", "*.log", "*.xml"]
        },
        {
            "name": "mobile.start",
            "type": "mobile",
            "device": "android",
            "action": "start"
        },
        {
            "name": "mobile.install",
            "type": "mobile",
            "device": "android",
            "action": "install"
        },
        {
            "name": "project.phantomjs",
            "type": "phantomjs",
            "file": "phantomjs-script.js"
        },
        {
            "name": "project.webserver.start",
            "type": "webserver",
            "action": "start",
            "set": [{"key": "assert", "var": "assert", "prop":"result"}]
        },
        {
            "name": "project.webserver.stop",
            "type": "webserver",
            "action": "stop"
        }
     ],

    "tasks": [
        {
            "name": "libs.install",
            "plugins":["libraries.install"]
        },
        {
            "name": "libs.clean",
            "plugins":["libraries.clean"]
        },
        {
            "name": "clean",
            "plugins": ["project.clean"]
        },
        {
            "name": "libs.build",
            "plugins":["libraries.build"]
        },
        {
            "name": "install",
            "plugins":["lib.copy"]
        },
        {
            "name": "wipe",
            "plugins": ["project.clean", "project.wipe"]
        },
        {
            "name": "minify",
            "plugins": ["project.minify"]
        },
        {
            "name": "test",
            "plugins": ["project.webserver.start", "project.phantomjs", "project.webserver.stop"]
        },
        {
            "name": "mtest",
            "plugins": ["mobile.install", "project.webserver.start", "mobile.start"]
        },
        {
            "name": "phantom",
            "plugins": ["project.phantomjs"]
        },
        {
            "name": "server.start",
            "plugins": ["project.webserver.start"]
        },
        {
            "name": "server.stop",
            "plugins": ["project.webserver.stop"]
        },
        {
            "name": "sample",
            "plugins": ["sample.plugin"]
        }
    ]

}
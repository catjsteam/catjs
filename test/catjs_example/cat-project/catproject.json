{
    "name": "catexample",

    "source": "src/",
    "target": "target/",
    "cattarget": "./",

    "host": "localhost",
    "port": "8089",
    "protocol": "http",
    
    "analytics": "Y",
    "apppath": "./../app",
    "appserver": {
        "host": "localhost",
        "port": "8089",
        "protocol": "http"
    },

    "runner": {
        "run": {
            "devices": [                
                {
                    "type": "localpc",
                    "disable": false,
                    "runner": {
                        "name": "firefox",
                        "address": "/index.html"
                    }
                },
                {
                    "type": "localpc",
                    "disable": false,
                    "runner": {
                        "name": "chrome",
                        "address": "/index.html"
                    }
                }

            ]
        }
    },

    "plugins": [
        {
            "name": "webserver.start",
            "type": "webserver",
            "action": "start",
            "path": "./../app",
            "port": "8090"
        }
    ],

    "tasks": [

        {
            "name": "server",
            "plugins": ["webserver.start"]
        }

    ]


}

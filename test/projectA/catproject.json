{
    "name": "test-1",

    "extensions" : [{
        "name": "rootScan",
        "type": "scan",
        "path": "/home/arik/dev/projects/test-project"
    },{
        "name": "targetScan",
        "type": "scan",
        "path": "/home/arik/dev/projects/tmp/"
    }],

    "plugins": [
        {
            "name": "initScrap",
            "type": "scrap",
            "filters": [
                {
                    "type": "file",
                    "ext": [".txt"],
                    "exclude": true
                }
            ]
        },
        {
            "name": "initCopy",
            "type": "copy",
            "from": {
                "path": "/"
            },
            "to": {
                "path": "/home/arik/dev/projects/tmp/"
            },
            "filters": [
                {
                    "type": "file",
                    "ext": [".txt"],
                    "exclude": true
                }
            ]
        }
    ],

    "tasks": [
        {
            "name": "init",
            "extensions": ["rootScan"],
            "plugins": ["initCopy"]
        },
        {
            "name": "scrap",
            "extensions": ["targetScan"],
            "plugins": ["initScrap"]

        }
    ]


}
{
    "name": "test-1",

    "dependencies": [
        {
            "name": "dependency.loader",
            "type": "loader",
            "path": ["./plugins/"]
        },
        {
            "name": "spawn",
            "type": "spawn"
        },{
            "name": "source.scan",
            "type": "scan",
            "path": "/home/arik/dev/projects/cat/test/test-project"
        },
        {
            "name": "target.scan",
            "type": "scan"
        },
        {
            "name": "inject",
            "type": "inject"
        },
        {
            "name": "target.clean",
            "type": "clean"
        }
    ],

    "plugins": [
        {
            "name": "init.scrap",
            "type": "scrap",
            "filters": [
                {
                    "type": "file",
                    "ext": ["*", ".jpg"],
                    "exclude": true
                },
                {
                    "type": "file",
                    "ext": [".js"],
                    "exclude": false
                }
            ]
        },
        {
            "name": "ext.scrap",
            "type": "scrapext",
            "filters": [
                {
                    "type": "file",
                    "ext": ["*", ".jpg"],
                    "exclude": true
                },
                {
                    "type": "file",
                    "ext": [".js"],
                    "exclude": false
                }
            ]
        },
        {
            "name": "init.copy",
            "type": "copy",
            "from": {
                "path": "/"
            },
            "to": {
                "path": "./target/"
            },
            "filters": [
                {
                    "type": "file",
                    "ext": [".txt"],
                    "exclude": true
                }
            ]
        },
        {
            "name": "target.clean",
            "type": "clean"
        },
        {
            "name": "target.inject",
            "type": "inject"
        },
        {
            "name": "project.install",
            "type": "spawn",
            "command": "grunt",
            "args": ["install", "--no-color"]
        },{
            "name": "project.clean",
            "type": "spawn",
            "command": "grunt",
            "args": ["clean", "--no-color"]
        }
    ],

    "tasks": [
        {
            "name": "init",
            "dependencies": ["source.scan"],
            "plugins": ["init.copy"]
        },
        {
            "name": "scrap",
            "dependencies": ["dependency.loader", "target.scan"],
            "plugins": ["ext.scrap","init.scrap"]
        },
        {
            "name": "inject",
            "dependencies": ["dependency.loader", "inject", "spawn"],
            "plugins": ["target.inject", "project.install"]
        },
        {
            "name": "clean",
            "dependencies": ["target.clean", "spawn"],
            "plugins": ["target.clean", "project.clean"]
        }
    ]


}
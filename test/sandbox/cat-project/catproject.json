{
    "name": "sandbox",

    "source": "src/",
    "target": "target/",
    "host": "localhost",
    "port": "8086",
    "protocol": "http",

    "appserver": {
        "host": "localhost",
        "port": "8086",
        "protocol": "http"
    },

    "plugins": [
        {
            "name": "project.copy",
            "type": "copy",
            "dependency": "scan",
            "path": "./../cat-tests",
            "to": {
                "path": "./target/sandbox"
            }
        },
        {
            "name": "lib.copy",
            "type": "copy",
            "dependency": "scan",
            "path": "./lib",
            "to": {
                "path": "./target/sandbox/"
            }
        },
        {
            "name": "sandbox.minify",
            "type": "minify",
            "path": "./target/sandbox/",
            "filename": "cat.src.js",
            "src":["./src/**/*.js"]
        },
        {
            "name": "parse.test.a",
            "type": "fileparse",
            "dependency": "manager",
            "files": ["./target/sandbox/src/test/test-replaceme.txt"],
            "pattern": "replaceme",
            "replace": "xxxtestxxx",
            "applyto":["filename", "content"],
            "flags": "g"
        }
    ],

    "tasks": [
        {
            "name": "tests",
            "plugins": ["parse.test.a"]
        },
        {
            "name": "init",
            "plugins": ["project.copy", "p@libraries.build", "lib.copy"]
        },
        {
            "name": "scrap",
            "plugins": ["p@scrap.common",  "p@custom.plugin", "p@init.scrap"]
        },
        {
            "name": "inject",
            "plugins": ["p@scrap.common",  "p@custom.plugin", "p@project.inject"]
        }
    ]


}

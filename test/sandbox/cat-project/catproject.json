{
    "name": "sandbox",

    "source": "src/",
    "target": "target/",
    "host": "localhost",
    "port": "8086",
    "protocol": "http",

    "appserver": {
        "host": "localhost",
        "port": "8086",
        "protocol": "http"
    },

    "plugins": [
        {
            "name": "init.scrap",
            "type": "scrap",
            "dependency": "scan"
        },
        {
            "name": "libraries.build",
            "type": "libraries",
            "dependency": "manager",
            "imports": ["chai", "tmr", "cat"],
            "action": "build"
        },
        {
            "name": "init.copy",
            "type": "copy",
            "dependency": "scan",
            "path": "./../cat-tests",
            "from": {
                "path": "/"
            },
            "to": {
                "path": "./target/sandbox"
            }
        },
        {
            "name": "lib.copy",
            "type": "copy",
            "dependency": "scan",
            "path": "./lib",
            "from": {
                "path": "/"
            },
            "to": {
                "path": "./target/sandbox/"
            }
        },
        {
            "name": "project.minify",
            "type": "minify",
            "path": "./target/sandbox/",
            "filename": "cat.src.js",
            "src":["./src/**/*.js"]
        },
        {
            "name": "parse.test.a",
            "type": "fileparse",
            "dependency": "manager",
            "files": ["./target/sandbox/src/test/test-replaceme.txt"],
            "pattern": "replaceme",
            "replace": "xxxtestxxx",
            "applyto":["filename", "content"],
            "flags": "g"
        }
    ],

    "tasks": [
        {
            "name": "tests",
            "plugins": ["parse.test.a"]
        },
        {
            "name": "init",
            "plugins": ["init.copy", "libraries.build", "lib.copy"]
        },
        {
            "name": "scrap",
            "plugins": ["scrap-common",  "custom.plugin", "init.scrap"]
        },
        {
            "name": "inject",
            "plugins": ["scrap-common",  "custom.plugin", "project.inject", "project.minify"]
        }
    ]


}

{
    "name": "test-1",

    "env": {
        "source": "src/",
        "target": "target/"
    },

    "plugins": [
        {
            "name": "init.scrap",
            "type": "scrap",
            "dependency": "scan",
            "filters": [
                {
                    "type": "file",
                    "ext": ["*"],
                    "exclude": true
                },
                {
                    "type": "file",
                    "ext": [".js", ".html"],
                    "exclude": false
                },
                {
                    "type": "file",
                    "ext": [".js"],
                    "pattern": ["*sencha*"],
                    "exclude": true
                },
                {
                    "type": "file",
                    "ext": [".js"],
                    "pattern": ["*mock*"],
                    "exclude": true
                }
            ]
        },
        {
            "name": "libraries.build",
            "type": "libraries",
            "dependency": "manager",
            "imports": ["chai", "tmr", "cat"],
            "action": "build"
        },
        {
            "name": "init.copy",
            "type": "copy",
            "dependency": "scan",
            "path": "./../cat-test-app",
            "from": {
                "path": "/"
            },
            "to": {
                "path": "./target/test-1"
            },
            "filters": [
                {
                    "type": "file",
                    "ext": [".txt"],
                    "exclude": true
                }
            ]
        },
        {
            "name": "lib.copy",
            "type": "copy",
            "dependency": "scan",
            "path": "./lib",
            "from": {
                "path": "/"
            },
            "to": {
                "path": "./target/test-1/"
            }
        },
        {
            "name": "project.minify",
            "type": "minify",
            "path": "./target/test-1/",
            "filename": "cat.src.js",
            "src":["./src/**/*.js"]
        },
        {
            "name": "target.inject",
            "type": "inject"
        },
        {
            "name": "project.clean",
            "type": "clean",
            "src": ["target", "_cat_md.json"]
        },
        {
            "name": "project.wipe",
            "type": "clean",
            "src": ["src", "lib", "*.log", "*.xml"]
        },
        {
            "name": "mobile.install",
            "type": "spawn",
            "command": "adb",
            "args": ["install", "-r", "phonegap.apk"]
        },
        {
            "name": "mobile.test",
            "type": "spawn",
            "command": "adb",
            "args": ["shell", "am", "start",  "-e", "IP", "192.168.1.103", "-n", "com.hp.aamobile.cat/.example"]
        },
        {
            "name": "project.phantomjs",
            "type": "phantomjs",
            "file": "phantomjs-script.js",
            "host": "http://localhost:8089"
        },
        {
            "name": "project.webserver.start",
            "type": "webserver",
            "action": "start",
            "set": [{"key": "assert", "var": "assert", "prop":"result"}]
        },
        {
            "name": "project.webserver.stop",
            "type": "webserver",
            "action": "stop"
        }
    ],

    "tasks": [
        {
            "name": "init",
            "plugins": ["init.copy", "libraries.build", "lib.copy"]
        },
        {
            "name": "scrap",
            "plugins": ["scrap-common", "scrap-sencha", "custom.plugin", "init.scrap"]
        },
        {
            "name": "inject",
            "plugins": ["scrap-common", "scrap-sencha", "custom.plugin", "target.inject", "project.minify"]
        },
        {
            "name": "libs.build",
            "plugins":["libraries.build"]
        },
        {
            "name": "install",
            "plugins":["lib.copy"]
        },
        {
            "name": "clean",
            "plugins": ["project.clean"]
        },
        {
            "name": "wipe",
            "plugins": ["project.clean", "project.wipe"]
        },
        {
            "name": "minify",
            "plugins": ["project.minify"]
        },
        {
            "name": "test",
            "plugins": ["project.webserver.start", "project.phantomjs", "project.webserver.stop"]
        },
        {
            "name": "mtest",
            "plugins": ["mobile.install", "project.webserver.start", "mobile.test" ]
        },
        {
            "name": "phantom",
            "plugins": ["project.phantomjs"]
        },
        {
            "name": "server.start",
            "plugins": ["project.webserver.start"]
        },
        {
            "name": "server.stop",
            "plugins": ["project.webserver.stop"]
        },
        {
            "name": "sample",
            "plugins": ["sample.plugin"]
        }
    ]


}

{
    "mode": "dev",
    "out": {
        "name": "cat",
        "folder": "lib"
    },
    "libraries": [
        {
            "name": "cat",
            "address": "local",
            "base": "target",
            "prod" :[
                {
                    "name": "cat.js",
                    "src": ["Cat.js", "core/**/*.js", "plugins/**/*.js", "CatInit.js"],
                    "type": "js"
                },
                {
                    "name": "cat.css",
                    "src": ["css/*.css"],
                    "type": "css"
                },
                {
                    "name": "cat.json",
                    "src": ["config/catconfig.json"],
                    "type": "json"
                }
            ],
            "dev" :[
                {
                    "name":"cat.js",
                    "src": ["Cat.js", "core/**/*.js", "plugins/**/*.js", "CatInit.js"],
                    "type": "js"
                },
                {
                    "name": "cat.css",
                    "src": ["css/*.css"],
                    "type": "css"
                },
                {
                    "name": "cat.json",
                    "src": ["config/catconfig.json"],
                    "type": "json",
                    "parse": true
                }
            ],
            "static-names": ["catconfig.json"],
            "install" : "internal"
        },
        {
            "name": "requirejs",
            "address": "local",
            "base": ".",
            "prod" :["requirejs.js"],
            "dev" :["requirejs.js"],
            "install" : "static"
        },
        {
            "name": "tmr",
            "address": "local",
            "base": ".",
            "prod" :["tmr.js"],
            "dev" :["tmr.js"],
            "install" : "static"
        },
        {
            "name": "chai",
            "prod" :["chai.js"],
            "dev" :["chai.js"],
            "install": "static"
        },
        {
            "name": "jspath",
            "prod" :["jspath.js"],
            "dev" :["jspath.js"],
            "install": "static"
        }
    ]
}
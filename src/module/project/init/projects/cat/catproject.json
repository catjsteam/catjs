{
    "name": "{{name}}",

    "source": "src/",
    "target": "target/",

    "host": "{{host}}",
    "port": "{{port}}",
    "protocol": "{{protocol}}",

    "appserver": {
        "host": "{{appserver.host}}",
        "port": "{{appserver.port}}",
        "protocol": "{{appserver.protocol}}"
    },

    "plugins": [
        {
            "name": "init.scrap",
            "type": "scrap",
            "dependency": "scan",
            "filters": [
                {
                    "type": "file",
                    "ext": ["*"],
                    "exclude": true
                },
                {
                    "type": "file",
                    "ext": [".js", ".html"],
                    "exclude": false
                },
                {
                    "type": "file",
                    "ext": [".js"],
                    "pattern": ["cat"],
                    "exclude": true
                }
            ]
        },
        {
            "name": "libraries.build",
            "type": "libraries",
            "dependency": "manager",
            "imports": ["chai", "tmr", "cat"],
            "action": "build"
        },
        {
            "name": "init.copy",
            "type": "copy",
            "dependency": "scan",
            "path": "{{appath}}",
            "from": {
                "path": "/"
            },
            "to": {
                "path": "./target/{{name}}"
            }
        },
        {
            "name": "lib.copy",
            "type": "copy",
            "dependency": "scan",
            "path": "./lib",
            "from": {
                "path": "/"
            },
            "to": {
                "path": "./target/{{name}}/"
            }
        },
        {
            "name": "project.minify",
            "type": "minify",
            "path": "./target/{{name}}/",
            "filename": "cat.src.js",
            "src":["./src/**/*.js"]
        }
    ],

    "tasks": [
        {
            "name": "init",
            "plugins": ["init.copy", "libraries.build", "lib.copy"]
        },
        {
            "name": "scrap",
            "plugins": ["scrap-common", "custom.plugin", "init.scrap"]
        },
        {
            "name": "inject",
            "plugins": ["scrap-common", "custom.plugin", "project.inject", "project.minify"]
        }
    ]


}
